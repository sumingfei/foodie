.remove-roles .entry {
    float: left;
    margin-right: 4px;
    background: #fc0a3f url(../img/rolearrow.png) no-repeat right center;
    -moz-border-radius: 3px;
    -webkit-border-radius: 3px;
    text-transform: lowercase;
    border: none;
    padding: 1px 0px;
}

.remove-roles .small, .remove-roles .large {
    color: #FFF;
    font-size: 8pt;
    padding: 4px 20px 4px 4px;
}

.remove-roles .large {
    padding: 10px 20px 10px 10px;
}

.rightalign {
    text-align: right;
}

.error, .notice {
    background: url(../img/overlay-button.png) repeat-x;
    padding: 20px 5px;
    background-color: #FA6900;
    color: #fff;
    font-weight: bold;
    font-size: 9pt;
}

.notice {
    background-color: #9EB477;
}

.row .loginoptions
{
/*     float: right; */
    margin-left: 10px;
    color: #777;
}

.row .indentmore
{
    margin-left: 82px;
}